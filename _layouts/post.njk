{% extends '_layouts/base.njk' %}

{% block content %}
    <section>
        <h1>{{ title }}</h1>
        {{ content | safe }}
        <time datetime="{{ page.date.toISOString() }}">{{ page.date.toLocaleString('hu-HU', { year: 'numeric', month: 'long', day: 'numeric', hour: 'numeric', minute: 'numeric' }) }}</time>
    </section>
{% endblock %}